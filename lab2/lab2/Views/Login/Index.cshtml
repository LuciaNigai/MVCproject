@{ Layout = "~/Views/Shared/_Layout_Blank.cshtml"; }
@using System.Web.Optimization
@model lab2.Models.UserLogin

<body>
     <div class="imag1">
          <img src="~/Content/img/mmm.jpg" width="600" height="700">
     </div>
     <section>
          <div class="login">
               <h1 class ="Authorization">Authorization</h1>
               @Html.ValidationSummary(true)
               @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
               {
     @Html.AntiForgeryToken()
                                             <form method="post">
                                                  <div class="input-block">
                                                       @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                                                       @Html.TextBoxFor(m => m.Credential, new
                                                       {
                                                            placeholder = "Enter your name",
                                                            title = "Please enter you username",
                                                            value = "",
                                                            name = "username",
                                                            id = "username",
                                                            @class = "form-control"
                                                       })
                                                  </div>
                                                  <div class="input-block">
                                                       @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                                       @Html.TextBoxFor(m => m.Password, new
                                                       {
                                                            @class = "form-control",
                                                            type = "Password",
                                                            title = "Please enter you password",
                                                            placeholder = "**",
                                                            value = "",
                                                            name = "password",
                                                            id = "password",
                                                       })

                                                  </div>
                                                  <br/>
                                                  <br/>
                                                       <button type="submit" class="button">Submit</button>
                                                  
                                             </form>}
          </div>
          </section>
               </body>
